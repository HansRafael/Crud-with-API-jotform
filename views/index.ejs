
<!-- include header -->
    <%- include('include/_header') %>
<!-- /include header -->


    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add-user" class="border-shadow">
                    <span class="text-gradient">Novo Médico <i class="fas fa-user"></i></span>
                </a>
            </div>
            
            <div class="form-group">
                <form action="/search" id="search_cpf">
                    <label for="cpf" class="text-dark">Busca por CPF: </label>
                    <input type="text" required placeholder="seu CPF (apenas números)" name="id"
                    pattern="[0-9]{11}"
                    oninvalid="this.setCustomValidity('Digite um CPF válido')"
                    oninput="this.setCustomValidity('')">
                    <button type="submit"><i class="fa fa-search"></i></button>
                
                </form>
            </div>

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>@Url</th>
                            <th>CPF</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->